<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Simulator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary" type="color">@color/primary_500</item>
        <item name="colorPrimaryVariant" type="color">@color/primary_700</item>
        <item name="colorOnPrimary" type="color">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary" type="color">@color/secondary_200</item>
        <item name="colorSecondaryVariant" type="color">@color/secondary_900</item>
        <item name="colorOnSecondary" type="color">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" type="color" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Simulator.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>

    </style>
</resources>